# Reload yabai
ctrl + alt + cmd - r : brew services restart yabai

# lalt - return : osascript /Users/songboyao/scripts/iterm.scpt
lalt - return : open -na alacritty
lalt - s : osascript /Users/songboyao/scripts/safari.scpt
lalt - a : osascript /Users/songboyao/scripts/finder.scpt
lctrl - p : PYTHONSTARTUP=/Users/songboyao/jupyter_init.py /opt/homebrew/anaconda3/bin/jupyter qtconsole

lalt - space : yabai -m space --layout "$(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" else "bsp" end')"
lalt - m : yabai -m window --toggle native-fullscreen

lalt - j : yabai -m window --focus stack.next || yabai -m window --focus south
lalt - k : yabai -m window --focus stack.prev || yabai -m window --focus north
lalt - h : yabai -m window --focus west
lalt - l : yabai -m window --focus east
  
# fast focus desktop
lalt - tab : yabai -m space --focus recent
lalt - 1 : yabai -m space --focus 1
lalt - 2 : yabai -m space --focus 2
lalt - 3 : yabai -m space --focus 3
lalt - 4 : yabai -m space --focus 4
lalt - 5 : yabai -m space --focus 5
lalt - 6 : yabai -m space --focus 6
lalt - 7 : yabai -m space --focus 7
lalt - 8 : yabai -m space --focus 8
lalt - 9 : yabai -m space --focus 9
lalt - 0 : yabai -m space --focus 10

lalt + shift - 1 : yabai -m window --space  1; yabai -m space --focus 1
lalt + shift - 2 : yabai -m window --space  2; yabai -m space --focus 2
lalt + shift - 3 : yabai -m window --space  3; yabai -m space --focus 3
lalt + shift - 4 : yabai -m window --space  4; yabai -m space --focus 4
lalt + shift - 5 : yabai -m window --space  5; yabai -m space --focus 5
lalt + shift - 6 : yabai -m window --space  6; yabai -m space --focus 6
lalt + shift - 7 : yabai -m window --space  7; yabai -m space --focus 7
lalt + shift - 8 : yabai -m window --space  8; yabai -m space --focus 8
lalt + shift - 9 : yabai -m window --space  9; yabai -m space --focus 9
lalt + shift - 0 : yabai -m window --space 10; yabai -m space --focus 10

lctrl - f : yabai -m window --toggle float && yabai -m window --resize abs:600:450
lalt - d : yabai -m display --focus next || yabai -m display --focus first
# lalt - c : yabai -m window --close

lalt + shift - b : yabai -m space --balance
